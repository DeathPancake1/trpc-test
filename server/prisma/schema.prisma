generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://prisma:password@localhost:5432/trpc?schema=public"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  username  String?
  password String
  todos Todo[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  title     String
  finished Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}